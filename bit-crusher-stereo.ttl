@prefix lv2:  <http://lv2plug.in/ns/lv2core#>.
@prefix doap: <http://usefulinc.com/ns/doap#>.
@prefix pg: <http://ll-plugins.nongnu.org/lv2/ext/portgroups#>.
@prefix foaf: <http://xmlns.com/foaf/0.1/> .

@prefix p: <https://github.com/unclechu/lv2-ladspa-bit-crusher/stereo>.

p:in a pg:StereoGroup.
p:out a pg:StereoGroup.
p:
	a lv2:Plugin, lv2:MixerPlugin;
	lv2:index 1;
	lv2:binary <bit-crusher.so>;
	doap:name "Bit Crusher (Stereo)";
	doap:maintainer [ foaf:name "Viacheslav Lotsmanov"; ];
	doap:license <http://usefulinc.com/doap/licenses/lgpl>;

	lv2:port [
		a lv2:AudioPort, lv2:InputPort;
		lv2:index 0;
		lv2:symbol "input_l";
		lv2:name "Left input";
		pg:membership [
			pg:group p:in;
			pg:role pg:leftChannel;
		];
	], [
		a lv2:AudioPort, lv2:InputPort;
		lv2:index 1;
		lv2:symbol "input_r";
		lv2:name "Right input";
		pg:membership [
			pg:group p:in;
			pg:role pg:rightChannel;
		];
	], [
		a lv2:AudioPort, lv2:OutputPort;
		lv2:index 2;
		lv2:symbol "output_l";
		lv2:name "Left output";
		pg:membership [
			pg:group p:out;
			pg:role pg:leftChannel;
		];
	], [
		a lv2:AudioPort, lv2:OutputPort;
		lv2:index 3;
		lv2:symbol "output_r";
		lv2:name "Right output";
		pg:membership [
			pg:group p:out;
			pg:role pg:rightChannel;
		];
	], [
		a lv2:ControlPort, lv2:InputPort;
		lv2:index 4;
		lv2:symbol "drive";
		lv2:name "Drive (dB)";
		lv2:minimum 0;
		lv2:maximum 90;
		lv2:default 0;
	], [
		a lv2:ControlPort, lv2:InputPort;
		lv2:index 5;
		lv2:symbol "bit_depth";
		lv2:name "Bit-depth";
		lv2:minimum 1;
		lv2:maximum 32;
		lv2:default 8;
	], [
		a lv2:ControlPort, lv2:InputPort;
		lv2:index 6;
		lv2:symbol "downsampling";
		lv2:name "Downsampling (x)";
		lv2:minimum 1;
		lv2:maximum 128;
		lv2:default 1;
	], [
		a lv2:ControlPort, lv2:InputPort;
		lv2:index 7;
		lv2:symbol "dry";
		lv2:name "Dry (dB)";
		lv2:minimum -90;
		lv2:maximum 12;
		lv2:default -90;
	], [
		a lv2:ControlPort, lv2:InputPort;
		lv2:index 8;
		lv2:symbol "wet";
		lv2:name "Wet (dB)";
		lv2:minimum -90;
		lv2:maximum 12;
		lv2:default 0;
	], [
		a lv2:ControlPort, lv2:InputPort;
		lv2:index 9;
		lv2:symbol "invert_wet_phase";
		lv2:name "Invert wet phase";
		lv2:portProperty lv2:toggled;
		lv2:minimum 0;
		lv2:maximum 1;
		lv2:default 0;
	].
